#video
	padding 250px 0 300px
	background-image: url(../img/backs/video-bg.png)
	background-repeat: no-repeat
	background-position: center
	background-size: 100% 100%
	margin-bottom: -120px
	@media screen and (max-width 991px)
		padding 120px 0 150px
		margin-bottom: 0
	@media screen and (max-width 767px)
		background-image: none
		background-color: #FFF1D8
		margin-bottom: 100px
	@media screen and (max-width 560px)
		padding 60px 0
		margin-bottom: 60px
.general-img-video
	top -100px
	right 50px
	@media screen and (max-width 560px)
		width 450px
		top: 100px
	@media screen and (max-width 386px)
		display none
.video-wrapper-video
	margin-bottom: 100px
	@media screen and (max-width 991px)
		margin-bottom: 0
.video-text
	font-size: 22px
	margin-top: 80px
	@media screen and (min-width 1440px)
		font-size: 24px
	@media screen and (max-width 1199px)
		margin-top: 0
	@media screen and (max-width 991px)
		margin: 50px 0
	@media screen and (max-width 560px)
		font-size: 18px
		margin 35px 0