footer
	padding 20px 0
	text-align: center
	background-color: #FFF1D8
	font-size: 18px
	coor #000
	@media screen and (max-width 767px)
		font-size: 14px
	@media screen and (max-width 386px)
		padding 15px 0
	h5
		font-size: 24px;
		margin 0
		font-family: CR
		font-weight: bold
		text-transform uppercase
		@media screen and (max-width 767px)
			font-size: 20px
			line-height: 1.1
	p
		line-height: 1.3
		font-weight: 300
.conditions
	color #000
	text-decoration: underline
	&:focus
		color #000
		text-decoration: underline
	&:hover
		color: #000
		text-decoration: none
.soc-buttons
	width 100%
	margin: 0 auto
	a
		display: inline-block
		margin: 15px 7px 10px
		width: 29px;
		height: 29px;
		background-image url(../img/icons/soc-buttons.jpg)
		background-repeat no-repeat
		transition all .3s ease
		@media screen and (max-width 386px)
			margin 10px 5px
		&:hover
			opacity .9
			transform: translateY(-3px)
		&:nth-of-type(1)
			background-position: 0 0
		&:nth-of-type(2)
			background-position: -29px 0
		&:nth-of-type(3)
			background-position: -58px 0
		&:nth-of-type(4)
			background-position: -87px 0
		&:nth-of-type(5)
			background-position: -116px 0
		&:nth-of-type(6)
			background-position: -145px 0