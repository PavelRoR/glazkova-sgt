header
	overflow hidden
	padding 20px 0
	margin-bottom: 40px
	@media screen and (max-width 991px)
		margin-bottom: 30px
		padding 15px 0
.header-logo
	float left
	@media screen and (max-width 560px)
		width 96px
		margin-top: 5px
.contacts
	float: right
	text-align right
.contact
	display block
	font-size: 18px
	@media screen and (max-width 560px)
		font-size: 16px
		line-height: 1.1
	&:focus
		text-decoration none
		color #4E4C4C
	&:hover
		text-decoration underline
		color #4E4C4C