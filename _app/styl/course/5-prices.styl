#prices
	padding 200px 0 0
	background-image: url(../img/backs/video-bg.png)
	background-repeat: no-repeat
	background-position: center
	background-size: 100% 100%
	@media screen and (max-width 991px)
		background-image: none
		background-color: #FFF1D8
		padding 100px 0 80px
		margin-top: 100px
	@media screen and (max-width 560px)
		padding 60px 0
		margin-top: 60px
	@media screen and (max-width 386px)
		padding 40px 0
.general-img-packets-1
	top 100px
	left 0
	right 0
	margin 0 auto
.packet
	border-radius: 15px
	background-color #fff
	padding: 30px 30px 40px
	border 1px solid #c4c4c4
	width 100%
	max-width 380px
	margin: 0 auto 40px
	@media screen and (max-width 991px)
		margin-bottom: 20px
	@media screen and (max-width 560px)
		padding 20px 20px 40px
	&-head
		&-title
			font-size: 30px
			text-align center
			font-family: PTS
			font-weight: bold
			color: #000
			text-transform uppercase
	&-body
		padding 20px 0
		margin 20px 0
		border-top: 2px solid #FFF1D8
		border-bottom: 2px solid #FFF1D8
		min-height 401px
		@media screen and (max-width 1199px)
			min-height 514px
		@media screen and (max-width 991px)
			min-height 1px
		&-list
			margin-top: 20px
			li
				list-style none
				padding-left: 12px
				position relative
.cost
	text-align: center
	font-family: CR
	font-size: 30px
	font-weight: 500
	text-transform uppercase
	color: #fff
	text-shadow: -1px -1px 0 #4E4C4C, 1px -1px 0 #4E4C4C, -1px 1px 0 #4E4C4C, 1px 1px 0 #4E4C4C, 0 0 0 #4E4C4C, 0 -1px 0 #4E4C4C, -1px 0 0 #4E4C4C, 1px 0 0 #4E4C4C, 0 1px 0 #4E4C4C
	@media screen and (max-width 560px)
		font-size: 26px
	span
		display block
		text-transform none
		font-size: 60px
		font-weight: bold
		line-height: 40px
		color #000
		text-shadow: none
		@media screen and (max-width 560px)
			font-size: 46px
.prepayment
	text-align center
	@media screen and (max-width 991px)
		margin-bottom: 45px
		@media screen and (max-width 560px)
			margin-bottom: 30px
	&-title
		font-size: 40px
		font-weight: bold
		text-transform uppercase
		color red
		@media screen and (max-width 560px)
			font-size: 30px
	&-text
		font-size: 20px
		margin 20px 0 30px
		@media screen and (max-width 560px)
			font-size: 18px
			margin 15px 0 20px
.prepayment-button
	width 100%
	max-width 366px
	display block
	margin 0 auto
	padding 9px 20px